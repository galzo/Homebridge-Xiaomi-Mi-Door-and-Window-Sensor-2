{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"esModuleInterop": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"lib": ["DOM", "ES2022"],
		"module": "ES2022",
		"moduleResolution": "node",
		"sourceMap": true,
		"strict": true,
		"target": "ES2022",
		"noImplicitAny": false
	},
	"include": ["src/", "eslint.config.mjs", "homebridge-ui"],
	"exclude": ["**/*.spec.ts"]
}
